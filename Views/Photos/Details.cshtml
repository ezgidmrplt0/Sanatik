@model Sanatik.Models.Photo
@using System.Security.Claims

@{ ViewData["Title"] = Model.Title; }

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-4">
                <img src="@Model.ImagePath" class="img-fluid border border-secondary" style="width: 100%; object-fit: contain; max-height: 80vh; border-color: rgba(255,255,255,0.1)!important;" alt="@Model.Title">
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                   <h1 class="font-display text-white mb-0">@Model.Title</h1>
                   <p class="text-secondary mb-0">by @(Model.User?.UserName ?? "Unknown")</p>
                </div>
                <div>
                    <form asp-action="Like" asp-route-photoId="@Model.Id" method="post">
                        <button class="btn btn-outline-light d-flex align-items-center gap-2">
                            <span>Like</span>
                            <span class="badge bg-white text-dark">@Model.Likes.Count</span>
                        </button>
                    </form>
                </div>
            </div>
            
            <p class="text-light lead fs-6 opacity-75">@Model.Description</p>
        </div>
        
        <div class="col-lg-4">
            <div class="p-4" style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1);">
                <div class="d-flex align-items-center mb-4">
                    <div class="flex-grow-1">
                        <small class="text-uppercase text-muted d-block mb-1" style="letter-spacing: 2px;">Artist</small>
                        <h5 class="text-white font-display mb-0">@(Model.User?.UserName?.Split('@')[0] ?? "Unknown")</h5>
                    </div>
                </div>
                
                <div class="mb-4">
                     <small class="text-uppercase text-muted d-block mb-1" style="letter-spacing: 2px;">Uploaded On</small>
                     <p class="text-white font-mono">@Model.UploadDate.ToString("dd MMMM yyyy")</p>
                </div>

                <div class="d-grid gap-2">
                    <form asp-action="Like" asp-route-photoId="@Model.Id" method="post" class="d-grid">
                        <button class="btn btn-outline-light d-flex justify-content-between align-items-center p-3">
                            <span class="text-uppercase" style="letter-spacing: 2px;">Appreciate Art</span>
                            <span class="badge bg-white text-dark rounded-pill">@Model.Likes.Count â™¥</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
