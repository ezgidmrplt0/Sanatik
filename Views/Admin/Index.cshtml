@model Sanatik.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="font-display text-white">Admingravity Command Center</h2>
        <span class="badge bg-danger">ADMIN MODE</span>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="p-4 bg-dark border border-secondary">
                <h3 class="font-display text-info display-4 mb-0">@Model.TotalUsers</h3>
                <p class="text-light text-uppercase fw-bold mt-2" style="letter-spacing: 0.1em; opacity: 0.8;">Total Users</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-dark border border-secondary text-center">
                <h3 class="font-display text-warning display-4 mb-0">@Model.TotalPhotos</h3>
                <p class="text-light text-uppercase fw-bold mt-2" style="letter-spacing: 0.1em; opacity: 0.8;">Artworks Uploaded</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-dark border border-secondary text-right">
                <h3 class="font-display text-danger display-4 mb-0">@Model.TotalLikes</h3>
                <p class="text-light text-uppercase fw-bold mt-2" style="letter-spacing: 0.1em; opacity: 0.8;">Total Interactions</p>
            </div>
        </div>
    </div>

    <!-- User Management -->
    <div class="mb-5">
        <h4 class="font-display text-white mb-3">User Management</h4>
        <div class="table-responsive">
            <table class="table table-dark table-hover border border-secondary">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>User ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.AllUsers)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td class="text-muted small">@user.Id</td>
                            <td>
                                @if (user.Email != "admin@sanatik.com")
                                {
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to banish this user?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">BANISH</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="badge bg-success">SYSTEM GOD</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Photo Moderation -->
    <div>
        <h4 class="font-display text-white mb-3">Recent Uploads (Moderation)</h4>
        <div class="row">
            @foreach (var photo in Model.RecentPhotos)
            {
                <div class="col-md-3 mb-4">
                    <div class="photo-card position-relative">
                        <img src="@photo.ImagePath" class="img-fluid" style="height: 150px; width: 100%; object-fit: cover; opacity: 0.7;">
                        <div class="p-2 bg-dark border-top border-secondary">
                            <p class="text-white small mb-1 text-truncate">@photo.Title</p>
                            <small class="text-muted d-block mb-2">by @(photo.User?.UserName ?? "Unknown")</small>
                            <form asp-action="DeletePhoto" asp-route-id="@photo.Id" method="post" onsubmit="return confirm('Delete this artwork?');">
                                <button type="submit" class="btn btn-sm btn-danger w-100" style="font-size: 0.7rem;">DELETE</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
