@{
    /* Override Layout to use the main app layout which has site.css and intro.css references */
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- Star Background specifically for Manage pages -->
<div class="position-fixed top-0 start-0 w-100 h-100" style="z-index: -1;">
    <canvas id="star-canvas" style="width: 100%; height: 100%; display: block; background: #050505;"></canvas>
</div>

<div class="container mt-5 pt-5 pb-5">
    <div class="modal-glass-container p-4 rounded-4" style="min-height: 600px;">
        <h2 class="font-display mb-4 ps-3 border-start border-4 border-info">MANAGE ACCOUNT</h2>
        <p class="text-white-50 ms-1 mb-4">Change your account settings</p>
        
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9 border-start border-secondary border-opacity-25 ps-md-4 pt-4 pt-md-0">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
    <!-- Ensure bg-stars.js is loaded for the canvas -->
    <script src="~/js/bg-stars.js"></script>
}
